<form method="post" action="{{ path('famille_delete', {'id': famille.id}) }}" onsubmit="return confirm('Êtes-vous sûr de bien vouloir supprimer cet élément?');">
    <input name="_method" type="hidden" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ famille.id) }}">
    <button class="btn btn-danger mt-2">Supprimer</button>
</form>
